<h1>Your Pending Reminders</h1>

<% if reminders.count > 0 && reminders.where(active:true).count > 0 %>
  <table>
    <thead>
      <tr>
        <th>Message</th>
        <th>Reminder Time</th>
        <th>Phone Number</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% reminders.each do |reminder| %>
        <% if reminder.active %>
          <tr>
            <td><%= reminder.message %></td>
            <td><%= reminder.reminder_time %></td>
            <td><%= reminder.phone%></td>
            <td><%= link_to 'Show', reminder %></td>
            <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
            <td><%= link_to 'Delete Reminder', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No reminders are currently scheduled.</p>
<% end %>


<h3>Create A New Reminder</h3>
<%= bootstrap_form_for(reminder, layout: :inline) do |f| %>
  <% if reminder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reminder.errors.count, "error") %> prohibited this reminder from being saved:</h2>

      <ul>
      <% reminder.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= f.text_area :message, maxlength: 160, hide_label: true, value: "Enter message here" %>
  </div>
  <div class="field">

    <%= f.datetime_select :reminder_time, ampm: true, default: Time.now %>
  </div>
  <div class="field">
    <%= f.telephone_field :phone, value: current_user.phone, readonly: true %>

  </div>
    <div class="field">
      <%= f.label "Check to receive a voice call of your transcribed message."%>
    <%= f.check_box :call, checked: true %>
  </div>
      <div class="field">
      <%= f.label "Check to receive an SMS reminder message."%>
    <%= f.check_box :sms, checked: true %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="actions">
    <%= f.submit class: 'btn btn-info' %>
  </div>
  <br />
<% end %>